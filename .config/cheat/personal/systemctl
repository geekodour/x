# list processes:
systemctl # runnning
systemctl --failed # failed

# common operations on a service:
systemctl {start,restart,reload,stop,status,enable,disable} foo.service

# debug operations on a service:
systemctl edit <unit>
systemctl show <unit> # list properties
systemctl cat  <unit> # list file

# list units:
# --all
# --state : systemctl --state help
# --type  : systemctl --type help
systemctl list-units-{files} # add filters if required 

# list the dependencies of a unit:
systemctl list-dependencies <unit> 

# reset failed restart
sudo systemctl reset-failed endlessh

# reload daemons after unit file changes
sudo systemctl daemon-reload
